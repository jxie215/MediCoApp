<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context="com.example.jaden.medicoapp.doctor.workplan.WorkPlanFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent" android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:text="Calendar"
                android:textSize="22sp"
                android:textStyle="bold" />
            <CalendarView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/work_calendarView"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:text="Date Selected" />
            <LinearLayout
                    android:orientation="vertical"
                android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <CheckBox
                        android:text="CheckBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/work_slot1"/>
                <CheckBox
                        android:text="CheckBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/work_slot2"/>
                <CheckBox
                        android:text="CheckBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/work_slot3"/>
                <CheckBox
                        android:text="CheckBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/work_slot4"/>
                <CheckBox
                        android:text="CheckBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/work_slot5"/>
                <CheckBox
                        android:text="CheckBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/work_slot6"/>
                <CheckBox
                        android:text="CheckBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/work_slot7"/>
                <CheckBox
                        android:text="CheckBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/work_slot8"/>
                <CheckBox
                        android:text="CheckBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/work_slot9"/>
                <CheckBox
                        android:text="CheckBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/work_slot10"/>
                <CheckBox
                        android:text="CheckBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/work_slot11"/>
                <CheckBox
                        android:text="CheckBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/work_slot12"/>
            </LinearLayout>
            <LinearLayout
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:orientation="horizontal"
                    android:layout_width="match_parent" android:layout_height="wrap_content">

                <Button
                    android:id="@+id/work_confirm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/primary"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Confirm"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/work_cancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/primary"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Cancel"
                    android:textColor="@android:color/white" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
